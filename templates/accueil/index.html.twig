{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block javascripts %}
	<!-- Make sure you put this AFTER Leaflet's CSS -->
	<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>

	{{ encore_entry_script_tags('app') }}

{% endblock %}


{% block body %}
	<style>
		.bloc_total {
			width: 80%;
			position: relative;
		}
		#map {
			width: 100%;
			height: 700px;
		}
		.bloc {
			position: absolute;
			padding: 10px;
			border-radius: 10px;
			top: 300px;
			left: 50%;
			width: 40%;
			background-color: #f3e7e169;
			box-shadow: rgba(0, 0, 0, 0.1) 0 4px 12px;
			z-index: 1000;

		}
	</style>


	<div
		class="bloc_total bg-light">
		{# map #}
		<div id="map"></div>

		{# Resultat #}
		<div class="bloc">
			<h1 class="fs-5 py-2">Choisir le polluant Ã  visualiser</h1>
			{# Liste des polluants en bouton radio #}
			<div id="radio">
				<div class="form-check">
					<input class="form-check-input" type="radio" name="polluant" id="o3" value="o3" checked>
					<label class="form-check-label" for="o3">
						O3
					</label>
				</div>
				<div class="form-check">
					<input class="form-check-input" type="radio" name="polluant" id="pm10" value="pm10">
					<label class="form-check-label" for="pm10">
						PM10
					</label>
				</div>
				<div class="form-check">
					<input class="form-check-input" type="radio" name="polluant" id="pm25" value="pm25">
					<label class="form-check-label" for="pm25">
						PM2.5
					</label>
				</div>
				<div class="form-check">
					<input class="form-check-input" type="radio" name="polluant" id="no2" value="no2">
					<label class="form-check-label" for="no2">
						NO2
					</label>
				</div>
				<div class="form-check">
					<input class="form-check-input" type="radio" name="polluant" id="so2" value="so2">
					<label class="form-check-label" for="so2">
						SO2
					</label>
				</div>
			</div>


		</div>
	</div>

{% endblock %}
